<% if current_user.first_name.nil? && current_user.last_name.nil? %>
    <h1>Welcome back!</h1>
<% else %>
    <h1>Welcome back, <%= "#{current_user.first_name} #{current_user.last_name}"  %>!</h1>
<% end %>
<div class="card">
  <div class="card-header">
    My Agreements
  </div>
  <ul class="list-group list-group-flush">
    <% @agreements.each do |a| %>
        <li class="list-group-item"><%= a.created_at %> <%= a.status %> <%= a.percentage %></li>
    <% end %>
  </ul>
  <div class="card-footer">
    <%= form_tag add_agreement_profiles_path do %>
        <%= text_field_tag "agreements[agreement_code]", nil, class: 'form-control' %>
        <%= submit_tag nil, class: 'btn btn-outline-success' %>
    <% end %>
  </div>
</div>
<div class="offset-md-3 col-md-6">
  <h2><%= t('devise.shared.links.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label t('devise.first_name') %><br />
      <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label t('devise.last_name') %><br />
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label t('devise.email') %><br />
      <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label t('devise.password') %>
      <% if @minimum_password_length %>
      <em>(<%= "#{@minimum_password_length} #{t('devise.min_password_length')}" %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label t('devise.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.shared.links.sign_up'), class: 'btn btn-block btn-secondary btn-margin'  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
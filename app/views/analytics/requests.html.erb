<%= render 'analytics/navlinks' %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <%= t('analytics.agreements_created') %>
      </div>
      <%= line_chart @requests.group_by_day(:created_at).count %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <%= t('analytics.agreements.agreements_by_device_type') %>
      </div>
      <%= column_chart group_by_device_types @requests %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <%= t('analytics.agreements.agreements_by_device_brand') %>
      </div>
      <%= column_chart group_by_device_brands @requests %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <%= t('analytics.agreements.agreements_by_device_model') %>
      </div>
      <%= column_chart group_by_device_models @requests %>
    </div>
  </div>
</div>


<%= render 'analytics/navlinks' %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        Requests on Timeline
      </div>
      <%= line_chart @requests.group_by_day(:created_at).count %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        Requests by Device Type
      </div>
      <%= column_chart group_by_device_types @requests %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        Requests by Device Brand
      </div>
      <%= column_chart group_by_device_brands @requests %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        Requests by Device Model
      </div>
      <%= column_chart group_by_device_models @requests %>
    </div>
  </div>
</div>

